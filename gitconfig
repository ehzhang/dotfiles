[user]
    name = Edwin Zhang
    email = edwin.zhang@samsara.com
[core]
    editor = mvim -v
	excludesfile = ~/.gitignore
[push]
    default = current
[http]
    sslVerify = true
[color]
    ui = true
[alias]
    ci = commit
    co = checkout
    br = branch
    s = status --short --branch
    st = status --short --branch
    lp = log -p
    ld = log --pretty=format:'%H - %an, %ar : %s'
    lg = log --pretty=format:'%h - %an, %s' --graph --decorate --color
    di = diff
    ds = diff --staged
    rom = rebase origin/master -i
    rh = reset HEAD~
    rs = reset --soft HEAD~1

[branch "master"]
    remote = origin
    merge = refs/heads/master
	rebase = true
[credential]
	helper = osxkeychain
[merge "ours"]
	driver = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
